# API Configuration
API_URL=https://api.limitless.exchange

# Network Configuration (Base mainnet by default)
CHAIN_ID=8453

# Market Examples (works for both CLOB and NegRisk markets)
MARKET_SLUG=bitcoin-2024

# Authentication for Trading
LIMITLESS_API_KEY=your_api_key_here
PRIVATE_KEY=your_private_key_here

# Order Placement (set to true to enable in fluent-api-trading-workflow.ts)
PLACE_ORDER=false

# Note: Contract addresses are fetched dynamically from the venue system (market.venue)
# No need to configure CLOB/NEGRISK addresses - they vary per market!